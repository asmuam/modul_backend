// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Looking for ways to speed up your queries, or scale easily with your serverless or edge functions?
// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

datasource db {
  provider = "mongodb" // Ganti provider ke mongodb
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(auto()) @map("_id") // Menggunakan String ID untuk MongoDB
  username      String   @unique @db.String
  name          String   
  password      String
  email         String   @unique
  role          String   @default("USER")
  date_created  DateTime @default(now())
  date_updated  DateTime @updatedAt // Gunakan @updatedAt untuk pembaruan otomatis
  refresh_token String?  @db.String // Optional field
}
